<p id="notice"><%= notice %></p>

<h1>Options Transactions</h1>

<table cellpadding="2px" cellspacing="0" border="1">
  <thead>
    <tr>
      <th>Entrydate</th>
      <th>Ticker</th>
      <th>B/S</th>
      <th>C/P</th>
      <th>Contracts</th>
      <th>Size</th>
      <th>Expiration</th>
      <th>Strike</th>
      <th>Entryprice</th>
      <th>Entryfee</th>
      <th>Exitprice</th>
      <th>Exitfee</th>
      <th>Exitdate</th>
      <th>Status</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @options.each do |option| %>
      <tr>
        <td><%= option.entrydate.to_s(:trade_date) %></td>
        <td><%= option.ticker %></td>
        <td><%= option.side %></td>
        <td><%= option.optiontype %></td>
        <td><%= option.contracts %></td>
        <td><%= option.size %></td>
        <td><%= option.expiration.to_s(:exp_date) %></td>
        <td><%= number_with_precision(option.strike, precision: 2) %></td>
        <td><%= number_with_precision(option.entryprice, precision: 3) %></td>
        <td><%= number_with_precision(option.entryfee, precision: 2) %></td>
        <td><%= number_with_precision(option.exitprice, precision: 3) %></td>
        <td><%= number_with_precision(option.exitfee, precision: 2) %></td>
        <td><%= option.exitdate.to_s(:trade_date) %></td>
        <% if option.isactive %>
          <td>Open</td>
        <% else %>
          <td>Closed</td>
        <% end %>
        <td><%= link_to 'Show', option %></td>
        <td><%= link_to 'Edit', edit_option_path(option) %></td>
        <td><%= link_to 'Destroy', option, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

